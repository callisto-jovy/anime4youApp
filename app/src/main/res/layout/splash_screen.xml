<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/splashscreen_layout"
                                                   android:backgroundTintMode="src_atop"
>

    <TextView
            android:text="Version:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/version_text"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/yugata_text" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="YUGATA"
            android:layout_height="wrap_content" android:id="@+id/yugata_text"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/arimo" android:textSize="36sp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.255" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="3dp" app:layout_constraintHorizontal_bias="0.498" android:layout_width="wrap_content"
            android:textColor="@color/accentColor"/>
    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/anime4you_text"
            app:layout_constraintEnd_toEndOf="@+id/yugata_text"
            app:layout_constraintStart_toStartOf="@+id/yugata_text" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/yugata_text" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.043" android:textColor="@color/accentColor"/>
</androidx.constraintlayout.widget.ConstraintLayout>