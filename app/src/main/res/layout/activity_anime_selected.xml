<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.main.SelectedAnimeActivity"
>

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:id="@+id/selected_anime_toolbar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="675dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:src="@tools:sample/avatars" android:id="@+id/anime_cover_image"
            app:layout_constraintTop_toBottomOf="@+id/selected_anime_toolbar"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@android:drawable/stat_sys_download_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" android:id="@+id/download_anime_button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.955" app:layout_constraintVertical_bias="0.976"
    />
    <TextView
            android:text="TextView"
            android:layout_width="282dp"
            android:layout_height="40dp" android:id="@+id/selected_anime_name"
            app:layout_constraintStart_toEndOf="@+id/anime_cover_image" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selected_anime_toolbar"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.003" android:alpha="0.87"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12dp"
            app:autoSizeMaxTextSize="18dp"
            app:autoSizeStepGranularity="2sp"/>

    <TextView
            android:text="Episodes:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/selected_anime_episodes"
            app:layout_constraintStart_toEndOf="@+id/anime_cover_image" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selected_anime_name" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:alpha="0.87"/>
    <GridView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/anime_cover_image"
            app:layout_constraintBottom_toTopOf="@+id/download_anime_button"
            app:layout_constraintVertical_bias="0.94"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/anime_episodes_grid" android:verticalSpacing="20dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="64dp"
            android:elevation="4px" android:outlineProvider="bounds"/>
    <TextView
            android:text="Downloaded Episodes:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/anime_cover_image"
            app:layout_constraintBottom_toTopOf="@+id/anime_episodes_grid" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            android:alpha="0.87"/>
    <TextView
            android:text="AID:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/selected_anime_aid"
            app:layout_constraintTop_toBottomOf="@+id/selected_anime_episodes"
            android:layout_marginTop="12dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/anime_cover_image"
            app:layout_constraintHorizontal_bias="0.0"
            android:alpha="0.87"/>
    <TextView
            android:text="Language:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/selected_anime_language"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/selected_anime_aid" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/anime_cover_image" app:layout_constraintHorizontal_bias="0.0"
    />
    <TextView
            android:text="Size:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/anime_directory_size"
            app:layout_constraintTop_toBottomOf="@+id/anime_episodes_grid"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/download_anime_button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintVertical_bias="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>